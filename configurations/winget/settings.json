{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    // For documentation on these settings, see: https://aka.ms/winget-settings
    "source": {
        "autoUpdateIntervalInMinutes": 300
    },
    "installBehavior": {
        "preferences": {
            "scope" : "machine"
        },
        "locale": [ "en-US" ]
    },
    "telemetry": {
        "disable": true
    },
    "visual": {
        "progressBar": "rainbow"
    },
    "experimentalFeatures": {
        "experimentalMSStore": true,
        "list": true,
        "upgrade": true,
        "uninstall": true,
        "restSource": true
    }
}
